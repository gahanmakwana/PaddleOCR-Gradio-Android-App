    # Existing Python/Gradio ignores (keep these)
    __pycache__/
    *.py[cod]
    *$py.class
    *.egg
    *.egg-info/
    .env
    .venv
    env/
    venv/
    ENV/
    env.bak/
    venv.bak/

    # IDE / OS specific (keep these)
    .vscode/
    .idea/ # Android Studio's .idea folder should usually be ignored at the root if the Android project is a subfolder
    *.swp
    *.swo
    *~
    .DS_Store
    Thumbs.db

    # Output files from testing (keep these)
    result.jpg
    result.png

    # LFS files are pointers, the actual content is stored elsewhere
    # but the pointer files themselves should be committed.

    # --- Android Studio / Gradle specific ignores (ADD THESE) ---
    # Generated files
    *.apk
    *.aab
    *.ap_
    *.a_
    *.aar

    # Files for the ART/Dalvik VM
    *.dex

    # Built application files
    build/
    /*/build/

    # Local configuration files (sdk path, etc)
    local.properties

    # Log Files
    *.log

    # Android Studio Navigation editor files
    .navigation/

    # Android Studio captures folder
    captures/

    # Android Studio profiler data files
    *.hprof

    # IntelliJ
    *.iml
    # (If your Android project folder 'MyOCRApplication' has its own .idea,
    # and you want to ignore that specifically, you might add MyOCRApplication/.idea/
    # but usually the root .idea/ is enough if the Android project is a module within it)

    # Gradle
    .gradle/
    gradle-app.setting
    !gradle-wrapper.jar # Usually, the wrapper jar is committed
    !gradle/wrapper/gradle-wrapper.properties

    # Keystore files (VERY IMPORTANT - DO NOT COMMIT YOUR KEYSTORE)
    *.jks
    *.keystore

    # Google Services (if you were using Firebase, etc.)
    google-services.json # If it contains sensitive info and is not generic

    # Lint
    lint/reports/
    lint/intermediates/
    lint/generated/

    # C/C++
    .cxx/
    /*/build/generated/
    /*/build/intermediates/
    /*/build/kotlin/
    /*/build/outputs/
    /*/build/tmp/

    # Misc
    *.lock
    